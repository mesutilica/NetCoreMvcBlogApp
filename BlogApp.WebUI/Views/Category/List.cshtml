@model IEnumerable<Category>
@{
	ViewData["Title"] = "List";
}

<h1>Kategori Listesi</h1>
<a asp-action="Create" asp-controller="Category">Kategori Ekle</a>

<div class="container mt-3">
	<br />
	<div class="row">
		<div class="col">
			@if (Model.Count() > 0)
			{
				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Id</th>
							<th>Name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.CategoryId</td>
								<td>@item.Name</td>
								<td>
									<a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId">
										Güncelle
									</a>
									<a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId">
										Sil
									</a>
								</td>
							</tr>
						}

					</tbody>
				</table>
			}
			else
			{
				<div class="alert alert-danger">
					Kategory Eklenmemiş.
				</div>
			}
		</div>
	</div>
</div>